#include<stdio.h>
#define size 4
int top=-1,array[size];
void push(int value);
void pop();
void show();
int main(){
  push(10);
  push(20);
  push(30);
  push(40);
  printf("stack after push:\n");
  show();
  pop();
  pop();
  printf("stack after pop:\n");
  show();
}
void push(int value){
  
    array[++top]=value;
    printf("push %d to stack\n",value);
  
}
void pop(){
  
    printf("poped value=%d\n",array[--top]);
  
}
void show(){
 
    for(int i=top;i>=0;i--){
      printf("%d\n",array[i]);
    
  }
}
