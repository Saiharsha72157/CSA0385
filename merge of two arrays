#include <stdio.h>
int main()
{
    int n1 = 3, n2 = 4; 
    int arr1[] = {1, 2, 3};
    int arr2[] = {4, 5, 6, 7};
    int merged[n1 + n2];
    for (int i = 0; i < n1; i++) 
    {
        merged[i] = arr1[i];
    }
    for (int i = 0; i < n2; i++)
    {
        merged[n1 + i] = arr2[i];
    }
    printf("Merged array:\n");
    for (int i = 0; i < n1 + n2; i++) 
    {
        printf("%d ", merged[i]);
    }
    printf("\n");
    return 0;
}
